
{
  "$schema": "~/.config/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "layer-shell": true,
  "cssPriority": "application",
  "control-center-positionX": "right",
  "control-center-positionY": "top",
  "control-center-margin-top": 10,
  "control-center-margin-bottom": 10,
  "control-center-margin-right": 10,
  "control-center-margin-left": 10,
  "control-center-layer": "overlay",
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "notification-icon-size": 64,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,
  "notification-window-width": 500,
  "fit-to-screen": true,
  "control-center-height": 600,
  "control-center-width": 500,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "backlight",
    "volume",
    "inhibitors",
    "title",
    "dnd",
    "notifications"
  ],
  "widget-config": {
    "backlight": {
      "label": "󰃝 ",
      "device": "amdgpu_bl1",
      "subsystem": "backlight",
      "min": 0
    },
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear All"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "label": {
      "text": "Label Text",
      "max-lines": 5
    },
    "mpris": {
      "image-size": 96,
      "image-radius": 12
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "Terminal",
          "command": "foot"
        },
        {
          "label": "Browser",
          "command": "zen-browser"
        }
      ]
    },
    "menubar": {
      "menu#example": {
        "label": "Menu",
        "position": "right",
        "animation-type": "slide_down",
        "animation-duration": 250,
        "actions": [
          {
            "label": "Reload",
            "command": "swaync-client -rs"
          }
        ]
      },
      "buttons#example": {
        "position": "right",
        "actions": [
          {
            "label": "Lock",
            "command": "hyprlock"
          }
        ]
      }
    },
    "volume": {
      "label": " ",
      "show-per-app": true,
      "empty-list-label": "No active sink input",
      "expand-button-label": "  ",
      "collapse-button-label": " ",
      "icon-size": 24,
      "animation-type": "slide_down",
      "animation-duration": 250
    },
    "inhibitors": {
      "text": "Inhibitors",
      "clear-all-button": true,
      "button-text": "Clear All"
    }
  }
}
